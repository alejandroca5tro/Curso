@using exercise0701.Models
@Model List<Crewman>
@{
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div> 
        <h2>Tripulación del barco @ViewBag.Ship</h2>
        <br />
        @Html.ActionLink("Atrás", "Index", "Barco")
        <table border="1">
            <tr>
                <th>Marinero</th>
                <th>Cargo</th>
                <th>F. Título</th>                
            </tr>
            @foreach (Crewman c in Model)
            {
                <tr>
                    <td>@c.CrewmanName</td>
                    <td>@c.Position</td>
                    <td>@c.NavigationTitleDate</td>
                </tr>
            }
        </table>
    </div>
</body>
</html>
